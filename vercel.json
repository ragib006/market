{
    "version": 2,
    "builds": [
      {
        "src": "index.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "/"
      }
    ],
    "crons": [
      {
        "path": "/api/send-email",  // The path to your serverless function
        "schedule": "*/2 * * * *"    // Every 2 minutes
      }
    ]
  }
  